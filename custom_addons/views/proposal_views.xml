<odoo>
    <record id="view_research_proposal_tree" model="ir.ui.view">
        <field name="name">research.proposal.tree</field>
        <field name="model">research.proposal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="pi_id"/>
                <field name="department"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="budget_total"/>
            </list>
        </field>
    </record>

    <record id="view_research_proposal_form" model="ir.ui.view">
        <field name="name">research.proposal.form</field>
        <field name="model">research.proposal</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
            <group>
                <field name="name"/>
                <field name="pi_id"/>
                <field name="department"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="budget_total"/>
            </group>
            </sheet>
        </form>
        </field>
    </record>

    <!-- Graph view for proposals by status -->
    <record id="view_research_proposal_graph" model="ir.ui.view">
        <field name="name">research.proposal.graph</field>
        <field name="model">research.proposal</field>
        <field name="arch" type="xml">
        <graph string="Proposals by Status" type="bar">
            <field name="status" type="row"/>
            <field name="id" type="measure"/>
        </graph>
        </field>
    </record>

    <record id="action_research_proposals" model="ir.actions.act_window">
        <field name="name">Proposals</field>
        <field name="res_model">research.proposal</field>
        <field name="view_mode">list,form,graph</field>
    </record>

</odoo>